<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity"
    android:orientation="vertical">

    <fragment
        android:id="@+id/fragment2"
        android:name="me.syrin.monopolis.common.BoardFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/dice1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dice1: 0"/>
    <TextView
        android:id="@+id/dice2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dice2: 0"/>
    <Button
        android:enabled="false"
        android:id="@+id/button_roll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roll Dice"/>
    <Button
        android:enabled="false"
        android:id="@+id/button_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Turn"/>
    <fragment
        android:id="@+id/fragment_buttons"
        android:name="me.syrin.monopolis.common.GameButtonsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>